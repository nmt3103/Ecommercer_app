<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagesShadow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#B8D9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagesColor"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_blue"
        app:layout_constraintStart_toStartOf="@id/imagesShadow"
        app:layout_constraintTop_toTopOf="@id/imagesShadow"
        app:layout_constraintEnd_toEndOf="@id/imagesShadow"
        app:layout_constraintBottom_toBottomOf="@id/imagesShadow"
        />

    <ImageView
        android:id="@+id/imagePicker"
        android:visibility="invisible"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:src="@drawable/ic_picked"
        app:layout_constraintStart_toStartOf="@id/imagesColor"
        app:layout_constraintTop_toTopOf="@id/imagesColor"
        app:layout_constraintBottom_toBottomOf="@id/imagesColor"
        app:layout_constraintEnd_toEndOf="@id/imagesColor"
        />



</androidx.constraintlayout.widget.ConstraintLayout>