<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagesShadow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#B8D9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagesColor"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_text_hint"
        app:layout_constraintStart_toStartOf="@id/imagesShadow"
        app:layout_constraintTop_toTopOf="@id/imagesShadow"
        app:layout_constraintEnd_toEndOf="@id/imagesShadow"
        app:layout_constraintBottom_toBottomOf="@id/imagesShadow"
        />

    <TextView
        android:id="@+id/tvSize"
        android:textAlignment="center"
        android:text="S"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_picked"
        app:layout_constraintStart_toStartOf="@id/imagesColor"
        app:layout_constraintTop_toTopOf="@id/imagesColor"
        app:layout_constraintBottom_toBottomOf="@id/imagesColor"
        app:layout_constraintEnd_toEndOf="@id/imagesColor"
        android:textSize="12sp"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>